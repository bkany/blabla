<div class="container">
  <h2><span>Modification <%= @user.first_name %></span></h2>
  <div class="content">
    <div id="edit">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :first_name, required: true, autofocus: true %>
        <%= f.input :last_name, required: true, autofocus: true %>

        <%= f.file_field :avatar %>

      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :password,
      hint: "laisser blanc si pas de modification",
      required: false,
      input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
      required: false,
      input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
      hint: "mot de passe actuel pour modifier",
      required: true,
      input_html: { autocomplete: "current-password" } %>

      <% if @user.avatar.attached? %>
      <%= link_to "Supprimer ma photo de profil", user_remove_path(@user),
      method: :delete,
      data: { confirm: t('.confirm', default: 'Êtes-vous certain ?') },
      class: 'delete' %>
      <% end %>

      <div class="form-actions">
        <%= f.button :submit, "Modifier", class:"btn-primary btn-success" %>
      </div>
      <% end %>
      <br><br>
      <h3>Supprimer mon compte</h3>
      <p>Insatisfait?
        <%= link_to "Supprimer mon compte", registration_path(resource_name), class:"btn-primary btn-danger", data: { confirm: "Êtes-vous sur(e)?" }, method: :delete %>
      </p>
      <br><br>
      <%= link_to "Annuler", :back %>
    </div>
  </div>
</div>
